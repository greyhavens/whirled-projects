<!-- build configuration -->
<project name="ghostbusters_political_reskin" default="compile" basedir=".">
	
	<!-- define some basic project parameters -->
	<property name="app.name" value="GH"/>
	<property name="app.source-dir" value="src"/>
	<property name="app.package-dir" value="ghostbusters"/>
	
	<property name="app.server-agent" value="server/Server"/>
	<property name="app.enable-server-agent" value="true"/>
  
  
	<!-- defines our project name and type -->
	<property name="app.type" value="game"/>
	
	<!-- if you need to include extra source files, uncomment and edit this line -->
