<root>
<EndlessLevel
	maxMultiplier="4"
	multiplierDamageSoak="18.75"
	pointsPerExtraMultiplier="500"
	pointsPerResource="1"
	pointsPerOpponentKill="500">

	<GameDataOverride>
	</GameDataOverride>

	<HumanPlayers>
		<Player name="EndlessMp1"/>
		<Player name="EndlessMp2"/>
	</HumanPlayers>

	<PointsPerCreatureKill>
		<Unit type="grunt" points="10"/>
		<Unit type="heavy" points="10"/>
		<Unit type="sapper" points="10"/>
		<Unit type="courier" points="5"/>
		<Unit type="colossus" points="25"/>
	</PointsPerCreatureKill>	
<!--
baseHealthIncrement: applied each time the computer player is cycled back through
waveDelayScale: applied to each wave's delayBefore each time the player's repeating days are cycled through
-->

	<MapSequence>
		<!-- ****** LEVEL 1 : Welcoming Committee (Pigsley, School) ****** -->
		<Map displayName="Welcoming Committee" isSavePoint="true">
			<MapSettings backgroundName="schoolnoburn"/>
			<HumanPlayers>
				<HumanPlayer playerName="EndlessMp1" resourceHandicap="0.65">
					<BaseLocation x="120" y="250" team="0"/>
					<AvailableUnits all="true"/>
					<AvailableSpells all="true"/>
				</HumanPlayer>
				<HumanPlayer playerName="EndlessMp2" resourceHandicap="0.65">
					<BaseLocation x="120" y="350" team="0"/>
					<AvailableUnits all="true"/>
					<AvailableSpells all="true"/>
				</HumanPlayer>
			</HumanPlayers>
			<MultiplierDropLocation x="300" y="265"/>
			
			<!-- Intro Pigsley, the brute-force, stupid one. Steady stream of grunts -->
			<Computer
				playerName="Pigsley"
				baseStartHealth="150"
				baseHealth="150"
				baseHealthIncrement="75"
				waveDelayScale="0.85"
				team="1">
				<BaseLocation x="600" y="265" team="1"/>
				<RepeatingDays>
					<Day repeatWaves="true">
						<Wave absoluteDelay="5" targetPlayerName="EndlessMp1"><Unit type="grunt" count="2"/></Wave>
						<Wave absoluteDelay="10" targetPlayerName="EndlessMp2"><Unit type="grunt" count="3"/></Wave>
						<Wave absoluteDelay="20" targetPlayerName="EndlessMp1"><Unit type="grunt" count="3"/></Wave>
						<Wave absoluteDelay="25" targetPlayerName="EndlessMp2"><Unit type="grunt" count="2"/></Wave>
						<Wave absoluteDelay="30"/>
					</Day>
				</RepeatingDays>
			</Computer>
		</Map>
	</MapSequence>

</EndlessLevel>
</root>
