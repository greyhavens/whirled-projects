                    <Damage type="piercing"     scale="1"/>
                    <Damage type="explosion"    scale="1"/>
                    <Damage type="colossus"     scale="1"/>
                    <Damage type="base"         scale="1"/>
                </Armor>
            </Unit>

            <Unit
                type="base"
                displayName="" description="" introText="" introText2="" baseMoveSpeed="0" hasRepulseForce="false" detectRadius="0" loseInterestRadius="0"
                maxHealth="150"
                collisionRadius="20">
