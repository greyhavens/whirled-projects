<root>
    <EndlessLevel
        maxMultiplier="5"
        multiplierDamageSoak="15"

        pointsPerExtraMultiplier="500"
        pointsPerResource="1"
        pointsPerOpponentKill="500">

        <GameDataOverride>
        </GameDataOverride>

        <PointsPerCreatureKill>
            <Unit type="grunt" points="10"/>
            <Unit type="heavy" points="10"/>
            <Unit type="sapper" points="15"/>
            <Unit type="courier" points="5"/>
            <Unit type="colossus" points="25"/>
        </PointsPerCreatureKill>

        <MapSequence>
            <Map repeats="true">
                <MapSettings backgroundName="Level2">
                    <BaseLocation x="180" y="295" team="0"/>
                    <BaseLocation x="500" y="265" team="1"/>
                </MapSettings>
                <AvailableUnits all="true"/>
                <AvailableSpells all="true"/>

                <ComputerGroups>
                    <Group>
<!--
    baseHealthScale: applied each time the computer player is cycled back through (usually > 1)
    waveDelayScale: applied to each wave's delayBefore each time the player's repeating days are cycled through (usually < 1)
-->
                        <Computer
                            playerName="Ralph"
                            playerHeadshotName="portrait_ralph"
                            baseStartHealth="150"
                            baseHealth="150"
                            baseHealthScale="1.5"
                            waveDelayScale="0.5"
                            team="1">
                            <RepeatingDays>
                                <Day repeatWaves="true">
                                    <Wave delayBefore="5"><Unit type="sapper" count="24"/></Wave>
                                </Day>
                            </RepeatingDays>
                        </Computer>
                    </Group>
                </ComputerGroups>
            </Map>
        </MapSequence>



    </EndlessLevel>

</root>
