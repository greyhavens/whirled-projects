					baseHealthIncrement="75"
					waveDelayScale="0.85"
					team="1">
					<BaseLocation x="620" y="270" team="1"/>
					<RepeatingDays>
						<Day repeatWaves="true"
							noticeSpellDropAfterMin="4"
							noticeSpellDropAfterMax="5"
							spellDropCourierGroupSizeMin="2"
							spellDropCourierGroupSizeMax="2">
	
