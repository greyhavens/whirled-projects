			<!-- ****** LEVEL 3 : Grave Concerns (Jack & Pigsley) ****** -->
			<Map displayName="Grave Concerns" isSavePoint="false">
				<MapSettings backgroundName="wharf">
		            <SpellDropLocation x="360" y="130"/>
				</MapSettings>
				<HumanBaseLocations>
					<BaseLocation playerName="Finley" x="360" y="330" team="0"/>
					<BaseLocation playerName="Eloise" x="360" y="330" team="0"/>
				</HumanBaseLocations>
