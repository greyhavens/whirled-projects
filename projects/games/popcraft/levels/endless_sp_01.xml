<root>
	<EndlessLevel
		maxMultiplier="4"
		multiplierDamageSoak="18.75"

		pointsPerExtraMultiplier="500"
		pointsPerResource="1"
		pointsPerOpponentKill="500">

		<GameDataOverride>
		</GameDataOverride>

		<HumanPlayers>
			<Player name="Finley"/>
			<Player name="Eloise"/>
		</HumanPlayers>

		<PointsPerCreatureKill>
			<Unit type="grunt" points="10"/>
			<Unit type="heavy" points="10"/>
			<Unit type="sapper" points="10"/>
			<Unit type="courier" points="5"/>
			<Unit type="colossus" points="25"/>
		</PointsPerCreatureKill>	
<!--
baseHealthIncrement: applied each time the computer player is cycled back through
waveDelayScale: applied to each wave's delayBefore each time the player's repeating days are cycled through
-->

		<MapSequence>
			<!-- ****** LEVEL 1 : Welcoming Committee (Pigsley) ****** -->
			<Map displayName="Welcoming Committee" isSavePoint="false">
				<MapSettings backgroundName="schoolnoburn"/>
				<HumanBaseLocations>
					<BaseLocation playerName="Finley" x="80" y="295" team="0"/>
					<BaseLocation playerName="Eloise" x="80" y="295" team="0"/>
				</HumanBaseLocations>
				<MultiplierDropLocation x="200" y="265" scatterRadius="60"/>
				<AvailableUnits all="true"/>
				<AvailableSpells all="true"/>
				
				<!-- Intro Pigsley, the brute-force, stupid one. Steady stream of grunts -->
				<Computer
					playerName="Pigsley"
					baseStartHealth="150"
					baseHealth="150"
					baseHealthIncrement="75"
					waveDelayScale="0.85"
					team="1">
					<BaseLocation x="600" y="265" team="1"/>
					<RepeatingDays>
						<Day repeatWaves="true">
							<Wave absoluteDelay="5"><Unit type="grunt" count="2"/></Wave>
							<Wave absoluteDelay="15"><Unit type="grunt" count="3"/></Wave>
							<Wave absoluteDelay="20"><Unit type="grunt" count="2"/></Wave>
							<Wave absoluteDelay="30"><Unit type="grunt" count="3"/></Wave>
							<Wave absoluteDelay="35"><Unit type="grunt" count="2"/></Wave>
							<Wave absoluteDelay="45"><Unit type="grunt" count="3"/></Wave>
							<Wave absoluteDelay="50"><Unit type="grunt" count="2"/></Wave>
							<Wave absoluteDelay="60"><Unit type="grunt" count="4"/></Wave>
							<Wave absoluteDelay="62"><Unit type="grunt" count="4"/></Wave>
						</Day>
					</RepeatingDays>
				</Computer>
			</Map>
			
			<!-- ****** LEVEL 1 : Welcoming Committee (Horace) ****** -->
			<Map displayName="Welcoming Committee" isSavePoint="true">
				<MapSettings backgroundName="schoolnoburn"/>
				<HumanBaseLocations>
					<BaseLocation playerName="Finley" x="100" y="250" team="0"/>
					<BaseLocation playerName="Eloise" x="100" y="250" team="0"/>
				</HumanBaseLocations>
				<MultiplierDropLocation x="230" y="300" scatterRadius="60"/>
				<AvailableUnits all="true"/>
				<AvailableSpells all="true"/>
				
				<!-- Intro Horace: Wealthy, good looking, total snob. Sends decent attacks, but then leaves himself open for attack -->
				<Computer
					playerName="Horace"
					baseStartHealth="150"
					baseHealth="150"
					baseHealthIncrement="75"
					waveDelayScale="0.85"
					team="1">
					<BaseLocation x="600" y="340" team="1"/>
					<RepeatingDays>
						<Day repeatWaves="true"
							noticeSpellDropAfterMin="8"
							noticeSpellDropAfterMax="10"
							spellDropCourierGroupSizeMin="1"
							spellDropCourierGroupSizeMax="1">
							
							<Wave absoluteDelay="5"><Unit type="grunt" count="3"/></Wave>
							<Wave absoluteDelay="15"><Unit type="colossus" count="1"/></Wave>
							<Wave absoluteDelay="30"><Unit type="colossus" count="1"/></Wave>
							<Wave absoluteDelay="80"><Unit type="colossus" count="1"/></Wave>
							<Wave absoluteDelay="95"><Unit type="colossus" count="1"/></Wave>
